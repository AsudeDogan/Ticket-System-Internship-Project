@model TicketSystem.Models.Project
@using TicketSystem.Authorization
@{
    ViewData["Title"] = "Project Details";
}

<h1>@Model.Name</h1>
<p class="text-muted">@Model.Description</p>

<hr />
<h4>Tickets in this project</h4>

@if (Model.Tickets == null || !Model.Tickets.Any())
{
    <p><em>No tickets in this project yet.</em></p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Title</th>
                <th>Priority</th>
                <th>Type</th>
                <th>Status</th>
                <th>Created By</th>
                <th>Assigned To</th>
                <th style="width:170px;"></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var t in Model.Tickets.OrderByDescending(x => x.CreatedAt))
        {
            <tr>
                <td>@t.Title</td>
                <td>@t.Priority</td>
                <td>@t.Type</td>
                <td>@t.Status</td>
                <td>@t.CreatedBy?.Email</td>
                <td>@t.AssignedTo?.Email</td>
                <td>
                    <div class="btn-group gap-2" role="group" aria-label="Ticket Actions">
                        <a class="btn btn-sm btn-info" asp-controller="Tickets" asp-action="Details" asp-route-id="@t.Id">Details</a>
                        @if (User.IsInRole(AppRoles.Admin) || User.IsInRole(AppRoles.Developer))
                        {
                            <a class="btn btn-sm btn-warning" asp-controller="Tickets" asp-action="Edit" asp-route-id="@t.Id">Edit</a>
                        }
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
}

<p>
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</p>
