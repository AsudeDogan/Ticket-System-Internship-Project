@model TicketSystem.Models.Project
@{
    ViewData["Title"] = "Delete Project";
}
<h1>Delete Project</h1>
<p class="text-danger">This action cannot be undone.</p>
<hr/>

@if (ViewBag.LinkedTicketCount is int c && c > 0)
{
    <div class="alert alert-warning">
        This project has @c ticket(s). Move or delete them before deleting the project.
    </div>
}

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>
    <dt class="col-sm-2">Description</dt>
    <dd class="col-sm-10">@Model.Description</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger" @( (ViewBag.LinkedTicketCount is int c2 && c2 > 0) ? "disabled" : "" )>Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
