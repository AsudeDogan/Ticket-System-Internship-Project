@model TicketSystem.Models.Ticket

@{
    ViewData["Title"] = "Delete Ticket";
}

<h1>Delete Ticket</h1>
<p class="text-danger">Are you sure you want to delete this ticket?</p>
<hr />

<dl class="row">
    <dt class="col-sm-2">Title</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-2">Priority</dt>
    <dd class="col-sm-10">@Model.Priority</dd>

    <dt class="col-sm-2">Type</dt>
    <dd class="col-sm-10">@Model.Type</dd>

    <dt class="col-sm-2">Status</dt>
    <dd class="col-sm-10">@Model.Status</dd>

    <dt class="col-sm-2">Project</dt>
    <dd class="col-sm-10">@((Model.Project?.Name) ?? "-")</dd>

    <dt class="col-sm-2">Created By</dt>
    <dd class="col-sm-10">@Model.CreatedBy?.Email</dd>

    <dt class="col-sm-2">Assigned To</dt>
    <dd class="col-sm-10">@Model.AssignedTo?.Email ?? "-"</dd>

    <dt class="col-sm-2">Created At</dt>
    <dd class="col-sm-10">@Model.CreatedAt.ToLocalTime()</dd>
</dl>

<form asp-action="Delete" method="post" class="d-inline">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
</form>
<a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
