@model TicketSystem.Models.Ticket

@{
    ViewData["Title"] = "Edit Ticket";
}

<h2>Edit Ticket</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="All" class="text-danger"></div>

    <!-- Id zorunlu -->
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="row g-3">
        <div class="col-md-4">
            <label asp-for="Priority" class="form-label"></label>
            <select asp-for="Priority" class="form-select"
                    asp-items="Html.GetEnumSelectList<TicketSystem.Models.TicketPriority>()">
            </select>
            <span asp-validation-for="Priority" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="Type" class="form-label"></label>
            <select asp-for="Type" class="form-select"
                    asp-items="Html.GetEnumSelectList<TicketSystem.Models.TicketType>()">
            </select>
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="Status" class="form-label"></label>
            <select asp-for="Status" class="form-select"
                    asp-items="Html.GetEnumSelectList<TicketSystem.Models.TicketStatus>()">
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3 mt-3">
        <label asp-for="ProjectId" class="form-label">Project</label>
        <select asp-for="ProjectId" class="form-select" asp-items="@(ViewData["ProjectId"] as Microsoft.AspNetCore.Mvc.Rendering.SelectList)">
            <option value="">-- None --</option>
        </select>
        <span asp-validation-for="ProjectId" class="text-danger"></span>
    </div>

    @* Sadece Admin için developer atama *@
    @if (User.IsInRole("Admin"))
    {
        <div class="mb-3">
            <label asp-for="AssignedToId" class="form-label">Assign to Developer</label>
            <select asp-for="AssignedToId" class="form-select"
                    asp-items="@(ViewData["AssignedToId"] as Microsoft.AspNetCore.Mvc.Rendering.SelectList)">
                <option value="">-- Unassigned --</option>
            </select>
            <span asp-validation-for="AssignedToId" class="text-danger"></span>
        </div>
    }

    <!-- Buton aralığı -->
    <div class="mt-3 d-flex">
        <button type="submit" class="btn btn-primary me-2">Save</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
