@using TicketSystem.Authorization
@model IEnumerable<TicketSystem.Models.Ticket>

@{
    ViewData["Title"] = "Tickets";
    var isAdminOrDev = User.IsInRole(AppRoles.Admin) || User.IsInRole(AppRoles.Developer);
}

<div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-3">
    <h2 class="m-0">Tickets</h2>

    <!-- Create -->
    <a asp-action="Create" class="btn btn-primary">Create Ticket</a>
</div>

<!-- Filtreler: Sadece Admin/Developer kullanabilir -->
@if (isAdminOrDev)
{
    <form asp-action="Index" method="get" class="d-flex flex-wrap gap-2 mb-3 ms-auto">
        <select name="priority" class="form-select form-select-sm" style="min-width: 160px;"
                asp-items="ViewBag.PriorityList">
            <option value="">Priority (All)</option>
        </select>

        <select name="type" class="form-select form-select-sm" style="min-width: 160px;"
                asp-items="ViewBag.TypeList">
            <option value="">Type (All)</option>
        </select>

        <button type="submit" class="btn btn-sm btn-outline-secondary">Apply</button>
        <a asp-action="Index" class="btn btn-sm btn-light">Reset</a>
    </form>
}

<table class="table table-bordered table-striped align-middle">
    <thead>
        <tr>
            <th>Title</th>
            <th>Priority</th>
            <th>Type</th>
            <th>Status</th>
            <th>Project</th>
            <th>Created By</th>
            <th>Assigned To</th>
            <th style="width: 200px;"></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var t in Model)
    {
        <tr>
            <td>@t.Title</td>
            <td>@t.Priority</td>
            <td>@t.Type</td>
            <td>@t.Status</td>
            <td>@(t.Project?.Name ?? "—")</td>
            <td>@(t.CreatedBy?.Email ?? "—")</td>
            <td>@(t.AssignedTo?.Email ?? "—")</td>
            <td>
                <div class="d-inline-flex gap-2">
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@t.Id">Details</a>
                    @if (isAdminOrDev)
                    {
                        <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@t.Id">Edit</a>
                    }
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>
